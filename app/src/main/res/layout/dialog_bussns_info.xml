<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:text="企业信息"
        android:textColor="@color/text_label"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="统一社会信用代码"
            android:textColor="@color/text_label"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_buss_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/text_value"
            android:textSize="14sp"
            tools:text="sdaasdasdasdasd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="法人代表"
            android:textColor="@color/text_label"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_buss_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/text_value"
            android:textSize="14sp"
            tools:text="sdaasdasdasdasd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="注册时间"
            android:textColor="@color/text_label"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_buss_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/text_value"
            android:textSize="14sp"
            tools:text="sdaasdasdasdasd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/dialog_buss_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/text_label"
        android:textSize="18sp" />
</LinearLayout>

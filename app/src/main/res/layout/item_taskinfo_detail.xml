<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/info_detail_label"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_label"
        android:textSize="14sp"
        tools:text="企业名称" />

    <TextView
        android:id="@+id/info_detail_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/info_detail_label"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        tools:text="阿打的分手的分手手的是的分手的" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_detail_value"
        android:background="#2f959595" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/take_1_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:text="联合监管检查方案"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/take_1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            tools:text="联合监管检查方案联联合监管检查方案联合监管检查方案联合监管检查方案联合监管检查方案" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/joint_pending_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/take_2_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:layout_below="@id/take_1_label"
            android:gravity="center_vertical"
            android:text="检查时间"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/take_2_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/take_2_label"
            android:layout_toRightOf="@id/take_2_label"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/take_3_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:layout_below="@id/take_2_label"
            android:gravity="center_vertical"
            android:text="执法检查时间"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/take_3_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/take_3_label"
            android:layout_toRightOf="@id/take_3_label"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/take_info_layout1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/take_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common_btn"
            android:enabled="true"
            android:gravity="center"
            android:text="领取"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/take_empty_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/take_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_grey_btn"
            android:gravity="center"
            android:text="退回"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/take_btn3"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_info_btn"
            android:gravity="center"
            android:text="详情"
            android:textColor="#0b255f"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#2f959595" />

</LinearLayout>

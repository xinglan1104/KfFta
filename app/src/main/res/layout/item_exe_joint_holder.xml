<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/exe_joint_1_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:text="联合监管检查方案"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exe_joint_1_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            tools:text="联合监管检查方案联联合监管检查方案联合监管检查方案联合监管检查方案联合监管检查方案" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exe_joint_2_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="检查时间"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exe_joint_2_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exe_joint_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exe_joint_3_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="检查结果"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exe_joint_3_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exe_joint_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exe_joint_4_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="接受状态"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exe_joint_4_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exe_joint_layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exe_joint_5_label"
            android:layout_width="@dimen/label_width"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="执法状态"
            android:textColor="@color/text_label"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/exe_joint_5_value"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/text_value"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="随机抽取随机抽取随机抽取" />
    </LinearLayout>

    <TextView
        android:id="@+id/exe_joint_btn1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/selector_common_btn"
        android:ellipsize="end"
        android:enabled="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="开始执行项目检查任务"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#2f959595" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/take_main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/take_1_label"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="抽取方案" />

        <TextView
            android:id="@+id/take_1_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/take_1_label"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="随机抽取随机抽取随机抽取" />

        <TextView
            android:id="@+id/take_2_label"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/take_1_label"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="执法开始时间" />

        <TextView
            android:id="@+id/take_2_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/take_2_label"
            android:layout_toRightOf="@id/take_2_label"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="随机抽取随机抽取随机抽取" />

        <TextView
            android:id="@+id/take_3_label"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/take_2_label"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="执法结束时间" />

        <TextView
            android:id="@+id/take_3_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/take_3_label"
            android:layout_toRightOf="@id/take_3_label"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="随机抽取随机抽取随机抽取" />

        <LinearLayout
            android:id="@+id/take_info_layout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/take_3_label"
            android:orientation="horizontal">

            <Button
                android:id="@+id/take_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="领取" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/take_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="退回" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/take_btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="详情" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_info_layout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/take_3_label"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/take_btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="领取" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/take_btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="详情" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/take_main_view"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent" />

</RelativeLayout>